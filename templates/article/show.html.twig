{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container">

        <h1>Article : {{ article.title }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ article.slug }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ article.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>
                    {{ article.author == app.user ? 'You are the author of this article' : article.author.username }}
                </td>
            </tr>
            <tr>
                <th>Change status</th>
                <td>
                    {% for availableTransition in availableTransitions %}
                        <a href="{{ path('article_change_status', {'id': article.id, 'status': availableTransition.name}) }}">
                            {{ availableTransition.tos|join(' | ') }}
                        </a>
                    {% else %}
                        No status available
                    {% endfor %}
                </td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('article_index') }}" class="btn btn-dark d-inline-block">back to list</a>

        {% if is_granted('edit', article) %}
            <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary d-inline-block">edit</a>
        {% endif %}

        {% if is_granted('delete', article) %}
            {{ include('article/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
